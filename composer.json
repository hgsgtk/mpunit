{
    "name": "hgsgtk/mpunit",
    "description": "The PHP Mini xUnit Framework.",
    "type": "library",
    "license": "MIT License",
    "authors": [
        {
            "name": "hgsgtk",
            "email": "hgsgtk@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4"
    },
    "autoload": {
        "psr-4": {
            "MPUnit\\": "src/"
        }
    },
    "bin": ["bin/mpunit"],
    "require-dev": {
        "squizlabs/php_codesniffer": "3.*"
    },
    "scripts": {
        "cs-check": "phpcs --standard=PSR2 src"
    }
}
